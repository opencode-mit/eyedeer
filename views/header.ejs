<!DOCTYPE html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://unpkg.com/petite-vue" defer init></script>
    <link rel="icon" type="image/x-icon" href="/images/eyedeer.svg">
    <style>
        body {
            font-family: var(--default-regular-font, -apple-system),BlinkMacSystemFont,"Segoe UI",Roboto,"Noto Sans",Ubuntu,Cantarell,"Helvetica Neue",sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol","Noto Color Emoji";
        }

        a:not(:hover) {
            text-decoration: none;
        }

        a, a:visited {
            color: #36c;
        }
        
        main {
            visibility:hidden;
        }

        .loader {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            border: 6px solid transparent; /* Light grey */
            border-top: 6px solid #3498db; /* Blue */
            border-bottom: 6px solid #3498db; /* Blue */
            border-radius: 50%;
            width: 20px;
            height: 20px;
            opacity: 0;
            animation: spin 2s linear infinite, appear 200ms 0.2s forwards;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        @keyframes appear {
            0% { opacity: 0; }
            100% { opacity: 1; }
        }
    </style>
    <script>
        window.addEventListener('load', function () {
            document.querySelector(".loader").style.visibility = "hidden";
            document.querySelector("main").style.visibility = "visible";
        });
    </script>
</head>
<div class="loader"></div>