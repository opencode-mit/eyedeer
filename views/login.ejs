<%- include('header')%>

<style>
body {
  margin: auto;
  max-width: 60ch;
  background-color: #eee;
}

#login-container {
  padding: 65px 0.2em;
}

form {
  background-color: white;
  border: 1px solid lightgray;
  border-radius: 5px;
  padding: 1em;
}

.form-group {
  display: block;
  padding: 0.6em 0.5em;
}

.input-label {
  display: block;
  font-size: 0.8em;
  font-weight: 600;
  margin-bottom: 0.2em;
}

.form-group.split {
  padding-top: 0.1em;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.brand {
  text-align: center;
}

.website-name {
  font-size: 1.2em;
  font-weight: 600;
}

.remember {
  display: flex;
  margin-top: 0.5em;
  align-items: center;
  gap: 0.2em;
}

.forgot {
  margin-top: 0.5em;
}

input[type=checkbox] {
  margin: 0;
}

.logo {
  width: 10ch;
}

.form-text {
  display: block;
  width: 100%;
  height: 2.5rem;
  padding: 0.5rem 0.75rem;
  font-size: 0.9em;
  line-height: 1em;
  border: 1px solid lightgray;
  border-radius: 5px;
  box-sizing: border-box;
  font-family: inherit;
}

input[type=submit] {
  width: 100%;
  height: 2.5rem;
  font-size: 1em;
  appearance: none;
  border: none;
  border-radius: 5px;
  background-color: #26a269;
  color: white;
  font-family: inherit;
  cursor: pointer;
}

</style>
<body>
  <div id="login-container">
    <form id="login-form" action="/login" method="post">
      <div class="brand">
        <img class="logo" alt="eyedeer logo" src="/images/eyedeer.svg">
        <h1 class="website-name">EyeDeer</h1>
      </div>
      <% if(info[0]) {%>
        <div class="message">
          <img src="/images/info.svg" alt="info">
          <%= info[0] %>
        </div>
      <%}%>
      <% if(error[0]) {%>
        <div class="message">
          <img src="/images/info.svg" alt="info">
          <%= error[0] %>
        </div>
      <%}%>
      <div class="form-group">
        <label class="input-label">Email</label>
        <input class="form-text" type="email" name="email"/>
      </div>
      <div class="form-group">
        <label class="input-label">Password</label>
        <input class="form-text" type="password" name="password" />
      </div>
      <div class="form-group split">
        <div class="remember">
          <input type="checkbox" id="remember" name="remember_me" value="1">
          <label for="remember"> Remember me</label>
        </div>
        <a class="forgot" href="/forgot">Forgot your password?</a>
      </div>
      <div class="form-group">
        <input type="submit" value="Sign in" />
      </div>
      <div class="centered-message">
        Don't have an account? <a href="/signup">Register now</a>
      </div>
    </form>
  </div>
</body>
