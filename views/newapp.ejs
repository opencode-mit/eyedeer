<%- include('header') %> 
<%- include('topbar') %> 
<style>
body {
    background-color: #eee;
}

main {
    max-width: 80ch;
    margin: 0 auto;
    padding: 1em;
}

input[type=text], input[type=email] {
  display: block;
  width: 100%;
  height: 2.5rem;
  padding: 0.5rem 0.75rem;
  font-size: 0.9em;
  line-height: 1em;
  border: 1px solid lightgray;
  border-radius: 5px;
  box-sizing: border-box;
  font-family: inherit;
  margin: 0.4em 0 0.6em 0;
}

.input-label {
  display: block;
  font-size: 0.8em;
  font-weight: 600;
  margin-bottom: 0.2em;
}

.form-group {
  display: block;
  padding: 0.6em 0.5em;
}

.form-group.end {
  display: flex;
  justify-content: end;
  gap: 0.3em;
}

.action {
    appearance: none;
    border: none;
    font-family: inherit;
    font-size: 1em;
    padding: 0.3em 0.5em;
    cursor: pointer;
}

.action:active {
    outline: none;
}

.action.primary {
    background-color: #26a269;
    color: white;
    border: 1px solid #218c5a;
    border-radius: 5px;
}

.action.primary:hover {
    box-shadow: inset 0 0 0 2px hsl(152, 62%, 28%), 0 2px 2px 0 rgb(0 0 0 / 8%);
    background-color: #218c5a;
    border-color: #27a56a;
}

.action.primary:active {
    box-shadow: inset 0 0 0 1px hsl(152, 62%, 24%), 0 0 0 1px #fff, 0 0 0 3px #428fdc;
    background-color: #1d7c50;
    border-color: #27a56a;
}

.action.secondary {
    background-color: white;
    color: #303030;
    border: 1px solid #bfbfbf;
    border-radius: 5px;
}

.action.secondary:hover {
    box-shadow: inset 0 0 0 2px #868686, 0 2px 2px 0 rgb(0 0 0 / 8%);
    background-color: #f0f0f0;
    border-color: #e3e3e3;
}

.action.secondary:active {
    box-shadow: inset 0 0 0 1px #5e5e5e, 0 0 0 1px #fff, 0 0 0 3px #428fdc;
    background-color: #dbdbdb;
    border-color: #e3e3e3;
}
</style>

<main>
    <form action="/app/new" method="post">
        <div class="form-group">
            <label for="name" class="input-label">Application Name</label>
            <input type="text" name="name" id="name" placeholder="GitLab">
        </div>
        <div class="form-group">
            <label for="redirect_uri" class="input-label">Authorization callback URL</label>
            <input type="text" name="redirect_uri" id="redirect_uri" placeholder="https://gitlab.com/auth/callback">
        </div>
        <div class="form-group end">
            <a href="/developer"><input class="action secondary" type="reset" value="Cancel"></a>
            <input class="primary action" value="Register Application" type="submit">
        </div>
    </form>
</main>